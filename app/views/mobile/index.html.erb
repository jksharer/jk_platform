<%= form_for(:session, url: sessions_path, class: "input-group") do |f| %>
<!-- <form class="input-group"> -->
	<div class="input-row">
		<label>用户名</label>
		<!-- <input type="text" placeholder="姓名" > -->
		<%= f.text_field :username %>
	</div>

	<div class="input-row">
		<label>密码</label>
		<!-- <input type="text" placeholder="邮箱" > -->
		<%= f.password_field :password %>
	</div>

	<div class="content-padded">
		<!-- <a href="" class="btn btn-primary btn-block">提交</a> -->
		<%= f.submit "登  陆", class: "btn btn-primary btn-block" %>
	</div>
<!-- </form> -->
<% end %>