<div id="login">
  <span id="app_logo">JK-EADP</span>
  <span id="app_info">基于Ruby on Rails的企业级应用开发平台</span>
  <hr>  
	<p id="welcome">欢迎来到JK-EADP，请输入您的用户名和密码</p>
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>
  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% end %>
  <div id="login_form">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :username, "用户名" %>
        
      
      <%= f.label :password, "密  码" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.submit "登  陆", class: "btn btn-lg btn-primary" %>
  <% end %>  
  </div>
</div>