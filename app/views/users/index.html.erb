<h1>所有用户</h1>

<%= link_to '注册新用户', new_user_path, class: "btn btn-large btn-primary" %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>用户名</th>
      <th>所属机构</th>
      <th>角色</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, edit_user_path(user) %></td>
        <td><%= user.agency.name %></td>
        <td>
          <%= user.roles.map { |role| "#{role.name}" }.join(',') %>
        </td>
        <td><%= link_to 'Destroy', user, method: :delete, 
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
