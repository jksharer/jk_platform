<%= form_for(@announcement) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name, "公告名称" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :announcement_type, "公告类型" %><br>
    <%= f.text_field :announcement_type, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :content, "公告内容" %><br>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :procedure_id, "审批流程" %><br>
    <%= f.select(:procedure_id, options_for_select(
      Procedure.all.map { |pro| [pro.name + " | " +steps_of_procedure(pro), pro.id] }), 
      {}, { class: "form-control"} ) %>
  </div>  
  
  <div class="actions">
    <%= f.submit "保  存", name: "save", class: "btn btn-large btn-primary" %>
    <%= f.submit "保存并提交", name: "save_and_submit", class: "btn btn-large btn-primary" %>   
  </div>
<% end %>